<h2>検索結果</h2>
<!--game一覧 -->
<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th></th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
     <% @game.each do |game| %>
     <tr>
　　　<td><%= attachment_image_tag game, :image , size: '160x120'%>
      </td><td>
       <%= link_to game.game_name, game, class: "game_#{game.id}" %>
      </td><td>   </td>
      <td><%= game.caption %></td>
     </tr>
     <% end %>
  </tbody>
 </table>

