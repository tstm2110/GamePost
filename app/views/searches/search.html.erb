<h2>Results index</h2>
<!--game一覧 -->
<table class="table table-hover table-inverse">
　<% if @range == '1' %>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
     <% @game.each do |game| %>
     <tr>

      <td>
       <%= link_to game.game_name, game, class: "game_#{game.id}" %>
      </td>
      <td><%= game.caption %></td>
     </tr>
     <% end %>
  </tbody>

  <% else %>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

    <tbody>
    <% @tag.each do |tag| %>
     <tr>

      <td>
       <%= link_to tag.game.title, game, class: "game_#{game.id}" %>
      </td>
      <td><%= tag.game.body %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>

